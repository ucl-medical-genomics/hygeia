#!/usr/bin/env Rscript

################################################################################
#
# R script for creating BED files from the regimes CSV files
#
################################################################################

library(data.table)
library(argparser)

p <- arg_parser("Process a single sample to create a BED track file")
p <- add_argument(p, "chr", help = "Chromosome number (without 'chr' prefix)")
p <- add_argument(p, "regimes_file", help = "Path to the regimes file for this sample/chr")
p <- add_argument(p, "genomic_positions_csv_file", help = "Path to the positions file for this chr")
p <- add_argument(p, "output_file", help = "Path to save the output BED file")

argv <- parse_args(p)

# TODO - This code assumes 6 regimes - fix to make it work with a different number of regimes. 

process_single_sample <- function(chr, regimes_file, positions_file, output_file) {
  positions <- fread(positions_file, header = FALSE)
  setnames(positions, "V1", "pos")
  positions[, `:=`(
    chr = chr,
    start = pos - 1, # convert to zero-base
    end = pos + 1    # end is original position + 1
  )]

  # Define color mapping for regimes
  colors <- data.table(
    regime = c("meteor_1", "meteor_2", "meteor_3", "meteor_4", "meteor_5", "meteor_6", "equiprobable"),
    itemRgb = c("248,118,109", "183,159,0", "0,186,56", "0,191,196", "97,156,255", "245,100,227", "128,128,128")
  )

  regime <- fread(regimes_file)
  regime_cols <- paste0("regime_", 1:6)

  # get the maximum probability (score col) for each row across the regime columns
  regime[, score := do.call(pmax, .SD), .SDcols = regime_cols]

  # Identify if there are ties (multiple columns with max probability)
  regime[, tie_count := rowSums(.SD == score), .SDcols = regime_cols]

  regimes[, name := ifelse(
    tie_count > 1, 
    "equiprobable",
    regime_cols[max.col(.SD, ties.method = "first")]
  ), .SDcols = regime_cols]

  regime <- rbind(regime[1], regime)

  # Combine positions and regime data
  message("Combining data and creating BED format")
  if (nrow(positions) != nrow(regimes)) {
    stop("Error: Number of positions does not match number of regime entries")
  }

  # Combine positions and regime data
  bed <- cbind(positions[, .(chr, start, end)], regimes[, .(name, score)])

  # Add additional BED columns
  bed[, `:=`(
    strand = ".",
    thickStart = start,
    thickEnd = end
  )]

  # Merge with colors
  bed <- merge(bed, colors, by.x = "name", by.y = "regime", all.x = TRUE)

  # Rearrange columns to BED format
  setcolorder(bed, c("chr", "start", "end", "name", "score", "strand", "thickStart", "thickEnd", "itemRgb"))

  # Create output directory if it doesn't exist
  output_dir <- dirname(output_file)
  if (!dir.exists(file.path(output_dir))) {
    dir.create(file.path(output_dir), recursive = TRUE)
  }

  # Save bed file
  message(paste0("Saving BED track to ", output_file))
  fwrite(bed, output_file, sep = "\t", col.names = FALSE, scipen = 999)
  
  message(paste0("Completed processing for chromosome ", chr))
  return(invisible(NULL))
}

# Execute with command line arguments
process_single_sample(
  chr = argv$chr,
  regimes_file = argv$regimes_file,
  positions_file = argv$positions_file,
  output_file = argv$output_file
)
